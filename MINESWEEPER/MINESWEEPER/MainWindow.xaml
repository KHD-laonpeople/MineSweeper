<mah:MetroWindow x:Name="mainWindow" x:Class="MINESWEEPER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="360" WindowStartupLocation="CenterScreen">
    

    <Grid>
        <Button Content="GameStart" HorizontalAlignment="Right" Margin="0,30,20,0" VerticalAlignment="Top" Width="75" Click="Button_GameStart"/>
        <TextBox x:Name="boardY" HorizontalAlignment="Left" Height="20" Margin="20,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" PreviewTextInput="TextBox_PreviewTextInput"/>
        <TextBox x:Name="boardX" HorizontalAlignment="Left" Height="20" Margin="65,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="x" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top"/>
        <Label Content="BoardSize" HorizontalAlignment="Left" Margin="20,5,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="mineEA" HorizontalAlignment="Left" Height="20" Margin="120,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Mine(EA)" HorizontalAlignment="Left" Margin="120,5,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="playerName" HorizontalAlignment="Left" Height="20" Margin="190,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="190,5,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LBtimer" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top"/>
        <UniformGrid x:Name="grid1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Height="240" Width="240">
            <ItemsControl></ItemsControl>
        </UniformGrid>
    </Grid>
</mah:MetroWindow>
